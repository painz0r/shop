<div class="row">
  <div class="small-4 columns">
    <a href="#" data-reveal-id="mycheckout">
      <div data-tooltip data-options="disable-for-touch:true" data-width="13%"
           title="This is your shopping cart. All items you add will appear here. Click to open!" class="panel callout radius has-tip">
        <h6 id="checkout" class="centered blink">
          <%= render partial: 'checkout_button' %>
        </h6>
      </div>
    </a>
  </div>
  <div class="small-4 small-offset-4 columns">
    <ul class="button-group even-1 radius">
      <li><%= render 'devise/menu/registration_items' %></li>
      <li><%= render 'devise/menu/login_items' %></li>
    </ul>
  </div>
</div>
<!-- End Navigation -->

<div class="row">

  <!-- Side Bar -->

  <div class="large-4 small-12 columns">
    <img src="http://placehold.it/500x500&text=Logo">
  </div>

  <!-- End Side Bar -->
  <div class="large-8 columns">
    <div class="row">
      <% @items.each do |item| %>
          <div class="large-4 small-6 columns">
            <a class="th radius" href="#">
              <img src="http://placehold.it/1000x1000&text=Thumbnail">
            </a>

            <div class="panel">
              <h5><%= item.title %></h5>
              <h6 class="subheader"><%= number_to_currency(item.price) %></h6>
              <%= button_to 'Add to Cart', line_items_path(:item_id => item), :class => 'button small radius', :remote => true %>
              <%= link_to 'Edit', edit_item_path(item) %>
              <%= link_to 'Destroy', item, method: :delete, data: {confirm: 'Are you sure?'} %>
            </div>
          </div>
      <% end %>
      <div class="large-12 columns">
        <ul class="inline-list right">


          <ul class="pagination">

            <%= will_paginate @orders %></li>


          </ul>
        </ul>
      </div>
    </div>
  </div>


  <!-- Checkout -->

</div>
</div>
<div id="mycheckout" class="reveal-modal medium">
  <div class="hide-for-small panel">
    <h3 class="centered">Your Shopping Cart</h3>
    </br>
    <h5 class="subheader" id="cart">
      <%= render @cart %>
    </h5>
  </div>
</div>

<!--End of Checkout -->