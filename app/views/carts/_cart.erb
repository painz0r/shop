<div class="row">
  <h4>
    <div class="large-5 small-7 columns marginTop">
      Total <%= number_to_currency(@cart.total_price) %>
    </div>
  </h4>
  <div class="large-3 small-6 columns">
    <%= button_to 'Empty Cart', @cart, :method => :delete, class: 'small button radius', data: {confirm: 'Are you sure?'}, :remote => true %>
  </div>
  <div class="large-4 small-12 columns">
    <%= button_to 'Continue Shopping', '#', class: 'small button radius', onclick: "$('#mycheckout').foundation('reveal', 'close'); event.preventDefault();" %>
  </div>
</div>
<div class="row">
  <div class="large-12 small-12 columns">
    <%= button_to 'Proceed To Checkout', new_order_path , method: 'get', class: 'small success button radius' %>
  </div>
</div>
