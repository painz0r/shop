<div class="row">
  <div class="small-2 columns">
    <a class="th radius" href="#">
      <img src="http://placehold.it/1000x1000&text=Thumbnail">
    </a>
  </div>
  <div class="row">
  <% if line_item == @current_item %>
      <div class="small-4 small-centered columns" id="current_item">
  <% else %>
      <div class="small-4 small-centered columns">
  <% end %>
  <%= line_item.quantity %> &times; <%= link_to line_item.item.title, item_path(line_item.item_id) %>
  </div>

  <div class="large-2 columns">
    <%= button_to 'Remove', line_item, :method => :delete, class: 'tiny button round', data: {confirm: 'Are you sure?'}, :remote => true %>
  </div>
 </div>
</div>